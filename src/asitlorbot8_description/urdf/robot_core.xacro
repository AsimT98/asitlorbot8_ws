<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="asitlorbot8">

    <xacro:arg name="is_sim" default="false"/>
    
    <xacro:include filename="inertial_macros.xacro"/>
    
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_footprint">

    </link>

    <!-- BASE_FOOTPRINT LINK -->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.055" rpy="0 0 0"/>
    </joint>

    <link name="base_link">
        
    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1275 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.1275 0 0.07"/>
            <geometry>
                <box size="0.255 0.153 0.14"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <!-- COLLISION TAG DEFINES VOLUME OF CERTAIN LINK -->
        <collision>
            <origin xyz="0.1275 0 0.07"/>
            <geometry>
                <box size="0.255 0.153 0.14"/>
            </geometry>
        </collision>
        <!-- INERTIA TAG :RESISTANCE TO MOTION -->
        <xacro:inertial_box mass="0.5" x="0.255" y="0.153" z="0.14">
            <origin xyz="0.1275 0 0.07" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis">
        <material>Gazebo/Orange</material>
    </gazebo>


    <!-- LEFT BACK WHEEL LINK -->
    
    <joint name="left_back_wheel_hinge" type="continuous">
        <parent link="base_link"/>
        <child link="left_back_wheel"/>
        <origin xyz="0.0625 0.1 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
        <limit effort="10000.0" velocity="20.0" />
        <dynamics damping="0.0"/>
        <joint_properties friction="0.0" />
    </joint>

    <link name="left_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.055" length="0.02"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.055"/>
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>1.0</mu>          <!-- Moderate grip in the primary direction -->
                        <mu2>1.0</mu2>        <!-- Moderate grip in the secondary direction -->
                        <fdir1>1 0 0</fdir1>  <!-- Aligns primary friction with the x-axis (forward direction) -->
                        <slip1>0.0</slip1>   <!-- Small slip value for slight sliding capability -->
                        <slip2>0.0</slip2>   <!-- Small slip value for slight sliding capability -->
                    </ode>
                </friction>
            </surface>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.055">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
           
    </link>
    <gazebo reference="left_back_wheel">
        <material>Gazebo/Blue</material>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <kp>1000000000000.0</kp>
        <kd>10.0</kd>
        <minDepth>0.0001</minDepth>
        <maxVel>0.0</maxVel>
        <fdir1>1 0 0</fdir1>
        <slip1>0.0</slip1>   <!-- Small slip value for slight sliding capability -->
        <slip2>0.0</slip2>
    </gazebo>

    <!-- LEFT FRONT WHEEL LINK -->

    <joint name="left_front_wheel_hinge" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
